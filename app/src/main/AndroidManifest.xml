<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".MyApp"
        android:networkSecurityConfig="@xml/security_settings"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheWeatherWithNesterenko">
        <activity
            android:name=".view.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".lesson6.MainService"/>
        <service android:name=".view.details.DetailsService"/>

        <receiver android:name=".lesson6.TheBroadcastReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.AIRPLANE_MODE" />
<!--                //todo проверить работоспобность theaction и исправить нужные константы -->
                <action android:name="@string/theaction" />
            </intent-filter>
        </receiver>

        <provider
            android:enabled="true"
            android:exported="true"
            android:authorities="@string/authorities"
            android:name=".lesson9.HistoryContentProvider"/>
    </application>

</manifest>